<div style="border:solid;border-color:#ADD8E6;border-width: 2px;border-radius: 25px;margin-left: 30%;margin-right: 30%;margin-top: 10%">
<h1 style="padding-left: 5%;padding-top:2.5%">Add new user</h1>
<div style="padding-left:10%;padding-top:2.5%;padding-bottom:2.5%">
	<%= form_for :user, url: users_path do |f| %>
	<p>
		<%= f.label :Name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :Bio %><br>
		<%= f.text_field :bio %>
	</p>
	<p>
		<%= f.label :"Zip Code" %><br>
		<%= f.text_field :zip %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	<%end%>
</div>
</div>